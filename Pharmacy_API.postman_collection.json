{
  "info": {
    "name": "Pharmacy API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/users/register",
              "host": ["{{BASE_URL}}"],
              "path": ["users", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\",\n  \"phone\": \"1234567890\",\n  \"address\": {\n    \"street\": \"123 Main St\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"zipCode\": \"10001\",\n    \"country\": \"USA\"\n  }\n}"
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"TOKEN\", jsonData.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/users/login",
              "host": ["{{BASE_URL}}"],
              "path": ["users", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/admin/login",
              "host": ["{{BASE_URL}}"],
              "path": ["admin", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"123456\"\n}"
            }
          }
        },
        {
          "name": "Update Admin Password",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/admin/password",
              "host": ["{{BASE_URL}}"],
              "path": ["admin", "password"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"123456\",\n  \"newPassword\": \"newpassword\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Drugs",
      "item": [
        {
          "name": "Get All Drugs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/drugs?page=1&keyword=",
              "host": ["{{BASE_URL}}"],
              "path": ["drugs"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "keyword",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Create Drug",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/drugs",
              "host": ["{{BASE_URL}}"],
              "path": ["drugs"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "Paracetamol",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Pain reliever and fever reducer",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "9.99",
                  "type": "text"
                },
                {
                  "key": "brand",
                  "value": "Generic",
                  "type": "text"
                },
                {
                  "key": "category",
                  "value": "non-prescription",
                  "type": "text"
                },
                {
                  "key": "requiresPrescription",
                  "value": "false",
                  "type": "text"
                },
                {
                  "key": "inStock",
                  "value": "100",
                  "type": "text"
                },
                {
                  "key": "dosageForm",
                  "value": "tablet",
                  "type": "text"
                },
                {
                  "key": "strength",
                  "value": "500mg",
                  "type": "text"
                },
                {
                  "key": "drugImage",
                  "type": "file",
                  "src": []
                }
              ]
            }
          }
        }
      ]
    },
